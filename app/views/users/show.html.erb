<div class="d-flex flex-column align-items-center">
  <div class="card col-sm-12 col-md-6 mr-0 ml-5 border-neon" style="width: 36rem; margin: auto; margin-top: 24px; align-items: left; margin-bottom: 24px;">
    <div class="text-center">
      <img src="<%= @user.photo.attached? ? (cl_image_path @user.photo.key, crop: :fill) : 'https://source.unsplash.com/random'%>" alt="Card image cap" class="mt-3 rounded-circle center-block" alt='photo' style= "height: 250px; width: 250px; object-fit: cover;">
    </div>
    <div class="card-body">
      <h1 class="card-title text-center" id='username'><%= @user.username %></h5>
      <h5 class="card-text"><i class="fas fa-quote-left mr-4"></i><%= @user.description %></h5>
      <h5><i class="fas fa-user mr-4"></i><%= @user.first_name %> <%= @user.last_name %></h5>
      <h5><i class="fas fa-globe-americas mr-4"></i><%= @user.region %></h5>
      <h5><i class="fab fa-hackerrank mr-4"></i><%= @user.rank %></h5>
      <h5><i class="fas fa-language" style="margin-right: 20px;"></i><%= @user.language %></h5>
      <h5><i class="fas fa-hat-cowboy-side" style="margin-right: 20px;"></i><%= @user.style %></h5>
      <h5><i class="fas fa-calendar-alt mr-4"></i><%= @user.age %> years old</h5>
    </div>
      <div class="card-body">
        <% if policy(@user).edit? %>
            <%= link_to 'edit', edit_user_registration_path(@user) %></p>
        <% end %>
    </div>
  </div>
</div>
