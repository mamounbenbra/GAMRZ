<div class="row justify-content-center align-items-start mt-5 mb-5">
  <div class=" col-lg-4 border-neon" style="background-color: #0504088f !important;">
    <div>
      <div class="p-4">
        <%= form_tag users_path, method: :get do %>
          <%= select_tag :region,
            options_for_select(User::REGIONS, selected: params[:region]),
            include_blank: "Region",
            class: "form-control mt-2"
          %>
          <%= select_tag :rank,
            options_for_select(User::RANKS, selected: params[:rank]),
            include_blank: "Rank",
            class: "form-control mt-2"
          %>
          <%= select_tag :style,
            options_for_select(User::STYLES, selected: params[:style]),
            include_blank: "Style",
            class: "form-control mt-2"
          %>
          <%= select_tag :language,
            options_for_select(User::LANGUAGES, selected: params[:language]),
            include_blank: "Language",
            class: "form-control mt-2"
          %>
          <%= submit_tag "Search", class: "btn w-100 mt-3 br-4 btn nsm" %>
        <% end %>
      </div>
    </div>
  </div>

  <div class="col-lg-6">
    <% if @user != nil %>
      <div class="main_card container text-center">
        <div>
          <div class="border-neon" style="background-color: #0504088f !important;">
            <div class="display-e">
              <img class="rounded-circle" style="width: 100px; height: 100px" src="<%= @user.photo.attached? ? (cl_image_path @user.photo.key, crop: :fill) : 'https://source.unsplash.com/random'%>">

            </div>
            <div class="display-l">
              <h1 id='username'><%= @user.username%></h1>
              <div id='username' class="text-left">
                <h5><i class="material-icons" style="margin-right: 20px;">equalizer</i></i><%= @user.rank %></h5>
                <h5><i class="material-icons" style="margin-right: 20px;">style</i><%= @user.style %></h5>
                <h5><i class="fas fa-globe-americas mr-4"></i><%= @user.region %></h5>
                <h5><i class="material-icons" style="margin-right: 20px;">record_voice_over</i><%= @user.language %></h5>
              </div>
            </div>
            <div class='d-flex justify-content-between mb-2 p-0 w-100'>
              <%= link_to(dislike_user_path(@user,region: params[:region], style: params[:style], rank: params[:rank], language: params[:language]), id: "no_btn") do %>
                <i style="font-size: 60px; color: #D897B0" data-id="<%=@user.id%>" class="fas fa-times-circle"></i>
              <% end %>
              <%= link_to(approve_user_path(@user,region: params[:region], style: params[:style], rank: params[:rank], language: params[:language]), id: "yes_btn", class:"rigth_swipe") do %>
                <i style="font-size: 60px; color: #00A676" data-id="<%=@user.id%>" class="fas fa-check-circle"></i>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    <% elsif params[:language] != "" || params[:style] != "" || params[:region] != "" || params[:rank] != "" %>
      <h2 class="text-index"> No users matching your filter, please change your preferences </h2>
    <% else %>
      <h2 class="text-index"> No users to match anymore, come back later le sang </h2>
    <% end %>
  </div>
</div>


<%# modal pop up  %>
<div id="myModal" class="modal">c
  <!-- Modal content -->
  <div class="modal-content justify-content-center match-border">
    <span class="close">&times;</span>
      <% if @other_one != "" && @other_one.present?%>
        <h2 class="text-center match-title">It's a Match With <%= User.find(@other_one.to_i).username%></h2>
        <div class="text-center">
          <img src="<%=  User.find(@other_one.to_i).photo.attached? ? (cl_image_path  User.find(@other_one.to_i).photo.key, crop: :fill) : 'https://source.unsplash.com/random'%>" alt="Card image cap" class="mt-3 rounded-circle center-block justify-content-center" alt='photo' style= "height: 200px; width: 200px; object-fit: cover;">
        </div>
      <% end %>
  </div>

</div>

<script>
  // Get the modal
  var modal = document.getElementById("myModal");

  // Get the <span> element that closes the modal
  var span = document.getElementsByClassName("close")[0];

  // When the user clicks on <span> (x), close the modal
  span.onclick = function() {
    modal.style.display = "none";
  }

  // When the user clicks anywhere outside of the modal, close it
  window.onclick = function(event) {
    if (event.target == modal) {
      modal.style.display = "none";
    }
  }
</script>
<% if @match_mutual == "true" %>
  <script>
    var modal = document.getElementById("myModal");
    modal.style.display = "block";
  </script>
<% end %>


