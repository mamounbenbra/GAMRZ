<div class="message-container <%= "me" if message.user == current_user && !defined?(for_other) %>"id="message-<%= message.id %>">
  <div class="message-content">
    <i class="author">
      <small><%= message.created_at.strftime("%a %b %e at %l:%M%p") %></small>
    </i>

    <p><%= message.content%></p>
  </div>
</div>
