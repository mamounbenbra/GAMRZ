<div class="row justify-content-center align-items-start" style="margin-right:12px; margin-left:12px;">
  <div class=" col-lg-5 pl-5 pr-5 card border-neon mr-5">
    <div class="text-center">
    <% @match.to_user == current_user ? user = @match.from_user : user = @match.to_user %>
      <img src="<%=  user.photo.attached? ? (cl_image_path  user.photo.key, crop: :fill) : 'https://source.unsplash.com/random'%>" alt="Card image cap" class="mt-3 rounded-circle center-block" alt='photo' style= "height: 100px; width: 100px; object-fit: cover;">
    </div>
    <div class="" style="padding-bottom: 0px;">
      <h1 class="card-title text-center" id='username'><%=  user.username %></h5>
      <h5 style='font-size: 1rem;'><i class="text-white fas fa-quote-left mr-4"></i><%=  user.description %></h5>
      <h5 style='font-size: 1rem;'><i class="text-white fas fa-globe-americas mr-4"></i><%=  user.region %></h5>
      <h5 style='font-size: 1rem;'><i class="text-white material-icons" style="margin-right: 20px;">equalizer</i><%=  user.rank %></h5>
      <h5 style='font-size: 1rem;'><i class="text-white material-icons" style="margin-right: 20px;">record_voice_over</i><%=  user.language %></h5>
      <h5 style='font-size: 1rem;'><i class="text-white material-icons" style="margin-right: 20px;">style</i><%=  user.style %></h5>
      <h5 style='font-size: 1rem;'><i class="text-white material-icons" style="margin-right: 20px; margin-bottom: -2px;">cake</i><%=  user.age %> years old</h5>

        <div class="d-flex justify-content-end mr-4 w-100">
            <p style="margin-right: 10px"> Add on    </p>
          <%= link_to @x, target:"blank" do %>
            <i style="color: White; font-size: 40px; margin: 0px" class="mr-4 fab fa-steam"></i>
          <% end %>
        </div>
    </div>
      <div class="card-body">
        <% if policy( user).edit? %>
            <%= link_to 'edit', edit_user_registration_path( user) %></p>
        <% end %>
    </div>
  </div>
  <div class=" col-lg-5 card border-neon ml-3" >
    <div id="messages" class="back1 rounded chat-box" data-chatroom-id="<%= @chatroom.id %>">
      <%= render @chatroom.messages %>
    </div>
      <%= simple_form_for [ @chatroom, @message ], remote: true, html: { autocomplete: 'off' } do |f| %>
      <div class="mt-2 form_wrapper-again">
      <i class="fas fa-arrow-alt-circle-right"></i>
        <%= f.input :content, label: false%>
        <%= f.submit 'send', class: "pr-4 mt-0 pt-0 pb-0 pl-4 bg-primary"%>
        <% end %>
      </div>
  </div>
</div>
