<div class="container justify-content-center mt-4">
  <h2 class="text-center bg-white user-title"><%= @match.to_user.username %></h1>
  <div id="messages" class="chat-box bg-white" data-chatroom-id="<%= @chatroom.id %>">
    <%= render @chatroom.messages %>
  </div>
  <%= simple_form_for [ @chatroom, @message ], remote: true do |f| %>
    <%= f.input :content, label: false %>
    <%= f.submit%>
  <% end %>
  <%= link_to "back to your matches", user_matches_path(current_user)%>
</div>
