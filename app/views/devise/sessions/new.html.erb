<div class='container mt-4 col-sm-12 col-md-5 justify-content-center'>
  <h2>Log in</h2>
  <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="form-inputs">
      <%= f.input :email,
                  required: true,
                  autofocus: true,
                  input_html: { autocomplete: "email" } %>
      <%= f.input :password,
                  required: true,
                  input_html: { autocomplete: "current-password" } %>
      <%= f.input :first_name, autofocus: true %>
      <%= f.input :last_name, autofocus: true %>
      <%= f.input :username, autofocus: true %>
      <%= f.input :region, autofocus: true %>
      <%= f.input :age, autofocus: true %>
      <%= f.input :language, as: :select, collection: User::LANGUAGES %>
      <%= f.input :rank, as: :select, collection: User::RANKS %>
      <%= f.input :style, as: :select, collection: User::STYLES %>
      <%= f.input :photo, as: :file %>
      <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
    </div>

    <div class="form-actions">
      <%= f.button :submit, "Log in", class:"btn btn-primary w-100 p-2 mt-2 mb-4" %>
    </div>
  <% end %>

  <%= render "devise/shared/links"%>
</div>
